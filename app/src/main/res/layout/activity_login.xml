<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <ImageView
        android:id="@+id/loginBlueBackground"
        android:layout_width="0dp"
        android:layout_height="284dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loginscreenbluebackgorund">

    </ImageView>


    <ImageView
        android:id="@+id/loginAirbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginRight="17dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/loginscreenairbus">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="104dp"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto_origin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="101dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="93dp"

        android:layout_height="wrap_content"
        android:text="@string/TitleName"
        >
    </TextView>

    <TextView
        android:id="@+id/loginButton"
        android:layout_width="326dp"
        android:layout_height="50dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="577dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="173dp"
        android:background="@drawable/radiusbutton"
        android:backgroundTint="#1A7FE1"
        android:fontFamily="@font/roboto_origin"
        android:paddingLeft="130dp"
        android:paddingTop="17dp"
        android:paddingRight="130dp"
        android:paddingBottom="17dp"
        android:text="@string/LoginText"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etEmail"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_origin"
        android:hint="email"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="129dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="381dp"
        android:layout_marginTop="385dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textviewborder"
        >

    </androidx.appcompat.widget.AppCompatEditText>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPassword"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:textSize="16dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_origin"
        android:hint="şifre"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="129dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="308dp"
        android:layout_marginTop="438dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/textviewborder"
        >

    </androidx.appcompat.widget.AppCompatEditText>

    <TextView
        android:layout_width="168dp"
        android:layout_height="20dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="523dp"
        android:layout_marginRight="142dp"
        android:layout_marginBottom="257dp"
        android:fontFamily="@font/inder"
        android:text="Beni Hatırla"
        android:textColor="#263238"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.checkbox.MaterialCheckBox

        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="521dp"
        android:layout_marginRight="321dp"
        android:layout_marginBottom="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.checkbox.MaterialCheckBox>







</androidx.constraintlayout.widget.ConstraintLayout>